@using System.Diagnostics;
@model TheGalleryWalk.Models.GalleryEntity
@{
    ViewBag.Title = "GalleryInformationView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>

<html>
<body>
      <div  class="EntityImage">
           <img id="EntityImage" src=@Url.Content(Model.ImageURL) alt="Gallery" style="width:100%; height:400px;" />
       </div>
    <div style="text-align:center; margin-top:50px;">
        <h4>@Html.Raw(Model.Name)</h4>
    </div>
    <span class="Divider" style="background-color:grey;"></span>

    <div class="Info-header">
        <h3>
            Artwork
        </h3>
    </div>

  
    <div style="text-align:center;">
        @try
        { Html.RenderPartial("~/Views/PageManagerView/PageManagerNumberView.cshtml", Model.PageManager); }
        catch (Exception ex)
        { Debug.WriteLine("There was an error ::    " + ex); }


        @try
        {
            Debug.WriteLine("Model Artwork entities :: " + Model.ArtworkEntities.Count);
            Html.RenderPartial("~/Views/Gallery/ArtworkPartialView.cshtml", Model.ArtworkEntities);
            }
            catch (Exception ex)
            {
            Debug.WriteLine("There was an error ::    " + ex);
        }
 
    @try
    { Html.RenderPartial("~/Views/PageManagerView/PageManagerNumberView.cshtml", Model.PageManager); }
    catch (Exception ex)
    { Debug.WriteLine("There was an error ::    " + ex); }


</div>
  
</body>

</html>
