@model TheGalleryWalk.Models.GalleryOwnerData

@{
    ViewBag.Title = "OwnedGalleries";
}

<script src="@Url.Content("~/Scripts/jquery.jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<html>
<head>
<style>
#barElement {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #333;
}

#listElement {
    float: left;
    color:whitesmoke;
    padding-left: 10px;
    padding-right: 10px;
}


#tileAttributes{
    background-color:aliceblue;
    padding: 10px;
}

</style>
 

</head>

<body>
    
    <div class="Info-header">
           <h3>
               My Galleries
           </h3>    
    </div> 
   
    <div style="text-align:center;">
        @Html.Partial("~/Views/OwnedGalleries/GalleryPartialView.cshtml", @Model.galleries.ToList())
    </div>
    <div>
        <div class="add-btn" id="addGalleryBtn" >
            <h4>+ Gallery  </h4>
        </div>
        <div class="add-btn" id="rmvGalleryBtn" style="display:none;">
            <h4>- Gallery  </h4>
        </div>
         <div id="addGalleryForm">

         </div>
    </div>
</body>

</html>


<script type="text/javascript">
    var url = '@Url.Action("AddGallery", "OwnedGalleries")';

    $(document).ready(function () {
        document.getElementById("addGalleryBtn").onclick = function () { addGalleryForm() };
        document.getElementById("rmvGalleryBtn").onclick = function () { removeGalleryForm() };

        function removeGalleryForm() {
            $('#addGalleryForm').empty();
            $("#addGalleryBtn").show();
            $("#rmvGalleryBtn").hide();
        }

        function addGalleryForm() {
            $('#addGalleryForm').load(url);
            $("#addGalleryBtn").hide();
            $("#rmvGalleryBtn").show();
        }
    })

</script>

