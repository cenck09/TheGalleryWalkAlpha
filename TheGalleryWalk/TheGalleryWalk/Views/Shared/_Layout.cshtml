<!DOCTYPE html>
<html>
<head>

     <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>

    <script src="https://use.typekit.net/wrs6bwk.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Gallery Walk</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/GalleryWalkStyles.css">
   
</head>
<body class="WebsiteBody">
    <div class="navbar navbar-fixed-top navBar-FlatNav navbar-inverse menuGrade" style="text-align:center; border-width:10px;">
        <div class="container">
            <div class="navbar-header">
                <!-- This button is the hamburger icon -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h4>
                    <a class="navbar-nav menuTitle navbar-left" style="color: black; text-align:left;" href="@Url.Action("Index","Home")",  new { area = "" }>The <br/> Gallery Walk</a>
                </h4>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav GalleryNavBar menuItem navbar-nav" style="padding-top:5px; text-align: center; float: none; display: inline-block;">
                    <li class="menuLi"><a class="nav navbar-nav menuItem menuTitle" href="@Url.Action("GalleryDirectory", "GalleryDirectory")">Our Galleries</a></li>
                    <li class="menuLi"><a class="nav navbar-nav menuItem menuTitle" href="@Url.Action("ArtistUserDirectory", "ArtistUserDirectory")">Our Artists</a></li>
                </ul>
                <ul class="nav navbar-nav menuItem navbar-right" style="padding-top:5px; text-align: center; float: none;">
                    <li style="text-align:center;display: inline-block;">
                        @Html.ActionLink("The Artsy Portal", "Login", "Async_SignIn", null, new { @class = "navbar-brand portalTitle" })
                    </li>
                    
                </ul>
              
            </div>  
        </div>
    </div>
    <div class="container body-content" style="margin-top:20px;">
        <div>
            @RenderBody()
        </div>
        <hr />
      
    </div>
    <div class="container body-content">

    </div>
    <style type="text/css">
        #footer {
            text-align: center;
            bottom: 0;
            height: 40px;
            margin-top: 0;
        }
    </style>
    <div id="footer">
        <a class="menuItem menuTitle" href="@Url.Action("About","Home")">About us</a>
    </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)


</body>
</html>
