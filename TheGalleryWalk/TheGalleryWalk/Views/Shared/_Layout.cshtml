<!DOCTYPE html>
<html>
<head>

     <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - The Gallery Walk</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/GalleryWalkStyles.css">
   
</head>
<body style="background-color: whitesmoke">
    <div class="navbar navbar-fixed-top navBar-FlatNav navbar-inverse menuGrade" style="text-align:center">
        <div class="container">
            <div class="navbar-header">
                <!-- This button is the hamburger icon -->
                <button type="button" class="navbar-toggle menuItem" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar" style="background-color:white"></span>
                    <span class="icon-bar" style="background-color:white"></span>
                    <span class="icon-bar" style="background-color:white"></span>
                </button>
                    @Html.ActionLink("The Gallery Walk", "Index", "Home", new { area = "" }, new { @class = "navbar-brand menuTitle"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav GalleryNavBar menuItem navbar-nav">
                    <li><a class="menuItem" href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a class="menuItem" href="@Url.Action("About","Home")">About</a></li>
                    <li><a class="menuItem" href="@Url.Action("Contact","Home")">Contact</a></li>       
                </ul>
                <ul class="nav navbar-nav menuItem navbar-right">
                    <li><a class="menuItem" href="@Url.Action("Signup","Async_SignUp")"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li><a  class="menuItem" href="@Url.Action("Login" , "Async_SignIn")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div>
            @RenderBody()
        </div>
        <hr />
      
    </div>
    <div class="container body-content">

        <footer style="display:block">
            <p>&copy; @DateTime.Now.Year - The Gallery Walk</p>
        </footer>
    </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)


</body>
</html>
