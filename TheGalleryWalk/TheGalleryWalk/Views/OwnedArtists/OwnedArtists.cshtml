@using Parse;
@using TheGalleryWalk.Models;
@using System.Threading;
@using System.Threading.Tasks;

@model TheGalleryWalk.Models.GalleryOwnerEntity


@{
    ViewBag.Title = "OwnedArtist";
}

<script src="@Url.Content("~/Scripts/jquery.jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<html>
<head>

</head>

<body>
    <div class="Info-header">
        <h3>
            Followed Artists
        </h3>
    </div>

    <div style="text-align:center;">
       
        @try
        {
             Html.RenderPartial("~/Views/ArtistUserDirectory/ArtistUserPartialView.cshtml", Model.MyFavoriteArtists);
        }
        catch (Exception ex)
        {
            Debug.WriteLine("There was an error ::    " + ex);
        }

    </div>


    <div class="Info-header">
           <h3>
               My Artists
           </h3>    
    </div> 
   
    <div style="text-align:center;">
        @using System.Diagnostics;
             @try
            { 
                Html.RenderPartial("~/Views/Gallery/ArtistPartialView.cshtml", Model.ArtistEntities);
            }
            catch (Exception ex)
            {
                Debug.WriteLine("There was an error ::    "+ex);
            }
</div>
    <div>
        <div class="add-btn" id="addArtistBtn">
            <h4>+ Artist  </h4>
        </div>
        <div class="add-btn" id="rmvArtistBtn" style="display:none;">
            <h4>- Artist  </h4>
        </div>
        <div id="addArtistForm" style="display:none">

            @if (Model.ArtistAdd == null)
            {
                ArtistEntity newArtist = new ArtistEntity();
                newArtist.ParentGalleryParseID = Model.ParseID;
                @Html.Partial("~/Views/AddArtist/Index.cshtml", model: newArtist);
            }
            else
            {
                @Html.Partial("~/Views/AddArtist/Index.cshtml", model: Model.ArtistAdd);
            }

        </div>
    </div>
</body>

</html>





<script type="text/javascript">


    $(document).ready(function () {
        document.getElementById("addArtistBtn").onclick = function () { addArtistForm() };
        document.getElementById("rmvArtistBtn").onclick = function () { removeArtistForm() };

        var showFormValue = @(ViewBag.showForm);

        if(!showFormValue){
            removeArtistForm();
        }else{
            addArtistForm();
        }

        function removeArtistForm() {
            $('#addArtistForm').hide();
            $("#addArtistBtn").show();
            $("#rmvArtistBtn").hide();
        }

        function addArtistForm() {
            //  $('#addGalleryForm').load(url);
            $("#addArtistForm").show();
            $("#addArtistBtn").hide();
            $("#rmvArtistBtn").show();
            document.getElementById('addArtistForm').scrollIntoView(true);
        }



    })



</script>

