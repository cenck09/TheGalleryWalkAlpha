@using Parse;
@model TheGalleryWalk.Models.GalleryOwnerEntity


@{
    ViewBag.Title = "OwnedArtist";
}

<script src="@Url.Content("~/Scripts/jquery.jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<html>
<head>

</head>

<body>
    
    <div class="Info-header">
           <h3>
               My Artists
           </h3>    
    </div> 
   
    <div style="text-align:center;">
        @using System.Diagnostics;
        @try
        {
            Html.RenderPartial("~/Views/OwnedArtists/ArtistPartialView.cshtml", (Model.GalleryEntities as IEnumerable<ParseObject>));

            }
            catch (Exception ex)
            {
            Debug.WriteLine("There was an error ::    "+ex);
            }
</div>
    <div>
        <div class="add-btn" id="addGalleryBtn" >
            <h4>+ Artist  </h4>
        </div>
        <div class="add-btn" id="rmvGalleryBtn" style="display:none;">
            <h4>- Artist  </h4>
        </div>
         <div id="addArtistForm" style="display:none">
           
             @if (Model == null)
             {
                @Html.Partial("~/Views/AddArtist/Index.cshtml", new TheGalleryWalk.Models.ArtistEntity());
             }
             else
             {
                @Html.Partial("~/Views/AddArtist/Index.cshtml", Model.ArtistAdd);
             }

         </div>
    </div>
</body>

</html>


<script type="text/javascript">
   

    $(document).ready(function () {
        document.getElementById("addArtistBtn").onclick = function () { addArtistForm() };
        document.getElementById("rmvArtistBtn").onclick = function () { removeArtistForm() };

        var showFormValue = @(ViewBag.showForm);

        var url = '@Url.Action("AddArtist", "OwnedArtists")';
        if(!showFormValue){
            removeArtistForm();   
        }else{
            addArtistForm();
        }

        function removeArtistForm() {
            $('#addArtistForm').hide();
            $("#addArtistBtn").show();
            $("#rmvArtistBtn").hide();
        }

        function addArtistForm() {
          //  $('#addGalleryForm').load(url);
            $("#addArtistForm").show();
            $("#addArtistBtn").hide();
            $("#rmvArtistBtn").show();
            document.getElementById('addArtistForm').scrollIntoView(true);
        }



    })

   

</script>

