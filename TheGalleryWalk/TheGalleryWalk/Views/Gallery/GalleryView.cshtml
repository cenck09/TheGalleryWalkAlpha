@using Parse;
@model TheGalleryWalk.Models.GalleryEntity

@{
    ViewBag.Title = "Owned_GalleryView";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<html>
<head>

</head>

<body>

    <div class="Info-header">
        <h3>
            @{string name = Model.Name;}
            @Html.Raw(name)
        </h3>
    </div>


    <div style="text-align:center;">
        @using System.Diagnostics;
        @try
        {
            Html.RenderPartial("~/Views/Gallery/ArtworkPartialView.cshtml", (Model.ArtworkEntities as IEnumerable<ParseObject>));

        }
        catch (Exception ex)
        {
            Debug.WriteLine("There was an error ::    " + ex);
        }
    </div>
    <div>
        <div class="add-btn" id="addArtworkBtn">
            <h4>+ Artwork  </h4>
        </div>
        <div class="add-btn" id="rmvArtworkBtn" style="display:none;">
            <h4>- Artwork  </h4>
        </div>
        <div id="addArtworkForm" style="display:none">

           
        </div>
    </div>
</body>

</html>


<script type="text/javascript">

    $(document).ready(function () {
        document.getElementById("addArtworkBtn").onclick = function () { addForm() };
        document.getElementById("rmvArtworkBtn").onclick = function () { removeForm() };

        var showFormValue = @(ViewBag.showForm);

        var url = '@Url.Action("AddArtwork", "Gallery")';
        if(!showFormValue){
            removeForm();
        }else{
            addForm();
        }

        function removeForm() {
            $('#addArtworkForm').hide();
            $("#addArtworkBtn").show();
            $("#rmvArtworkBtn").hide();
        }

        function addForm() {
          //  $('#addGalleryForm').load(url);
            $("#addArtworkForm").show();
            $("#addArtworkBtn").hide();
            $("#rmvArtworkBtn").show();
            document.getElementById('addArtworkForm').scrollIntoView(true);
        }

    })



</script>

