@using System.Diagnostics;
@using TheGalleryWalk.Models;
@using Parse;
@model TheGalleryWalk.Models.GalleryEntity

@{
    ViewBag.Title = "Owned_GalleryView";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery.jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<html>
<head>

</head>

<body>
    
       <div class="EntityInformationWindow" id="EntityInformationWindow">

           <div  class="EntityImage">
               <img id="EntityImage" src="/Content/demoImages/demoGallery.jpg" alt="demo Gallery" style="width:auto; border-radius:4px; height:auto;" />
           </div>
           <h3 class="EntityInfo">
               @Model.Name
           </h3>
           <h6 class="EntityInfo">
               @Model.EmailAddress
           </h6>
           <h6 class="EntityInfo">
               @Model.PhoneNumber
           </h6>
           <h6 class="EntityInfo">
               @Model.Address
           </h6>

       </div>



    <span class="Divider"></span>

    <div class="Info-header">
        <h3>
            Displayed Artwork
        </h3>
    </div>

    <div style="text-align:center;">
        @try
        {
            Debug.WriteLine("Model Artwork entities :: " + Model.ArtworkEntities);
            Html.RenderPartial("~/Views/Gallery/ArtworkPartialView.cshtml", Model.ArtworkEntities);
            }
            catch (Exception ex)
            {
            Debug.WriteLine("There was an error ::    " + ex);
            }
</div>
    <div>
        <div class="add-btn" id="addArtworkBtn">
            <h4>+ Artwork  </h4>
        </div>
        <div class="add-btn" id="rmvArtworkBtn" style="display:none;">
            <h4>- Artwork  </h4>
        </div>
        <div id="addArtworkForm" style="display:none">

          
            @if (Model.ArtworkAdd == null)
            {
                ArtworkEntity newArtwork = new ArtworkEntity();
                newArtwork.ParentGalleryParseID = Model.ParseID;
                @Html.Partial("~/Views/AddArtwork/Index.cshtml", model: newArtwork);
            }
            else
            {
                @Html.Partial("~/Views/AddArtwork/Index.cshtml", Model.ArtworkAdd);
            }
               
            
        </div>
    </div>


    <span class="Divider"></span>

    <div class="Info-header">
        <h3>
            Displayed Artists
        </h3>
    </div>

    <div style="text-align:center;">
        @try
        {
            IEnumerable<ParseObject> artists = Model.ArtistEntities;
            Html.RenderPartial("~/Views/Gallery/ArtistPartialView.cshtml", artists);
            }
            catch (Exception ex)
            {
            Debug.WriteLine("There was an error ::    " + ex);
            }
</div>
    <div>
        <div class="add-btn" id="addArtistBtn">
            <h4>+ Artist  </h4>
        </div>
        <div class="add-btn" id="rmvArtistBtn" style="display:none;">
            <h4>- Artist  </h4>
        </div>
        <div id="addArtistForm" style="display:none">

            @if (Model.ArtistAdd == null)
            {
                ArtistEntity newArtist = new ArtistEntity();
                newArtist.ParentGalleryParseID = Model.ParseID;
            //    @Html.Partial("~/Views/AddArtist/Index.cshtml", model: newArtist);
            }
            else
            {
             //   @Html.Partial("~/Views/AddArtist/Index.cshtml", model: Model.ArtistAdd);
            }

        </div>
    </div>

</body>

</html>


<script type="text/javascript">

    $(document).ready(function () {

        $("#EntityInformationWindow").height($("#EntityImage").height()+40);
        document.getElementById("addArtworkBtn").onclick = function () { addArtworkForm() };
        document.getElementById("rmvArtworkBtn").onclick = function () { removeArtworkForm() };

        document.getElementById("addArtistBtn").onclick = function () { addArtistForm() };
        document.getElementById("rmvArtistBtn").onclick = function () { removeArtistForm() };

        var showFormValue = @(ViewBag.showForm);

        var url = '@Url.Action("AddArtwork", "Gallery")';
        if(showFormValue == 1){
            addArtworkForm();   
        }else if (showFormValue == -1){
            addArtistForm();
        }

        function removeArtworkForm() {
            $('#addArtworkForm').hide();
            $("#addArtworkBtn").show();
            $("#rmvArtworkBtn").hide();
        }

        function addArtworkForm() {
          //  $('#addGalleryForm').load(url);
            $("#addArtworkForm").show();
            $("#addArtworkBtn").hide();
            $("#rmvArtworkBtn").show();
            document.getElementById('addArtworkForm').scrollIntoView(true);
        }

        function removeArtistForm() {
            $('#addArtistForm').hide();
            $("#addArtistBtn").show();
            $("#rmvArtistBtn").hide();
        }

        function addArtistForm() {
            //  $('#addGalleryForm').load(url);
            $("#addArtistForm").show();
            $("#addArtistBtn").hide();
            $("#rmvArtistBtn").show();
            document.getElementById('addArtistForm').scrollIntoView(true);
        }

    })



</script>

