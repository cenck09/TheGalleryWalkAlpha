@{
    ViewBag.Title = "Login username";
}

<div class="GalleryContent">
    <h1 style="margin:10px;padding:10px;">
        Login Username Page
    </h1>
    <form method="post" action="@Url.Action("LoginNext",null,null)">
        <table>
            <tr>
                <td>
                    <text>Username: </text>
                </td>
                <td>
                    <input type="text" name="username"/>
                </td>
            </tr>
            <tr>
                <td colspan="2" align="right"><input type="submit" value="Next" /></td>
            </tr>

        </table>
    </form>
</div>