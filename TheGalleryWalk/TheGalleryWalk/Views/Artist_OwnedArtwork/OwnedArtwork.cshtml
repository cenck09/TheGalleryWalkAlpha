
@{
    ViewBag.Title = "OwnedArtwork";
    Layout = "~/Views/Shared/_LayoutArtistLoggedIn.cshtml";
}

@using Parse;
@model TheGalleryWalk.Models.ArtistUserEntity


@{
    ViewBag.Title = "OwnedArtwork";
}

<script src="@Url.Content("~/Scripts/jquery.jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<html>
<head>

</head>

<body>

    <div class="Info-header">
        <h3>
            My Artwork
        </h3>
    </div>

    <div style="text-align:center;">
        @using System.Diagnostics;
        @try
        {
            Html.RenderPartial("~/Views/Gallery/ArtworkPartialView.cshtml", Model.ArtworkEntities);

        }
        catch (Exception ex)
        {
            Debug.WriteLine("There was an error ::    " + ex);
        }
    </div>
    <div>
        <div class="add-btn" id="addBtn">
            <h4>+ Artwork  </h4>
        </div>
        <div class="add-btn" id="rmvBtn" style="display:none;">
            <h4>- Artwork  </h4>
        </div>
        <div id="addForm" style="display:none">
            @using TheGalleryWalk.Models;

            @if (Model == null)
            {
                ArtworkEntity artwork = new ArtworkEntity()
                {
                    ParseID = Model.ParseID
                };
                @Html.Partial("~/Views/AddArtwork_Artist/Index.cshtml", artwork);
            }
            else
            {
                Model.ArtworkAdd.ParseID = Model.ParseID;
                @Html.Partial("~/Views/AddArtwork_Artist/Index.cshtml", Model.ArtworkAdd);
            }

        </div>
    </div>
</body>

</html>


<script type="text/javascript">


    $(document).ready(function () {
        document.getElementById("addBtn").onclick = function () { addForm() };
        document.getElementById("rmvBtn").onclick = function () { removeForm() };


        var showFormValue = @(ViewBag.showForm);

        if(!showFormValue){
            removeForm();
        }else{
            addForm();
        }

        function removeForm() {
            $('#addForm').hide();
            $("#addBtn").show();
            $("#rmvBtn").hide();
        }

        function addForm() {
            $("#addForm").show();
            $("#addBtn").hide();
            $("#rmvBtn").show();
            document.getElementById('addForm').scrollIntoView(true);
        }



    })



</script>

